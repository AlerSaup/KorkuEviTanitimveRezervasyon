@{
    Layout = "~/Views/Shared/adminpanel.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoşgeldin Ekranı</title>
    <link rel="stylesheet" href="styles.css">

    <style>

        .container {
            text-align: center;
        }

        .welcome-box {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            margin-left:30%;
            margin-top:20%;
        }

        h1 {
            font-size: 32px;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        .start-btn {
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .start-btn:hover {
                background-color: #2980b9;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="welcome-box">
            <h1>Hoşgeldiniz!</h1>
            <p>Yönetici panelinize başarıyla giriş yaptınız.</p>
            <p>Sol Tarafta Bulunan Panellerden Sayfa İçeriklerini Değiştirebilirsiniz.</p>
        </div>
    </div>
</body>
</html>